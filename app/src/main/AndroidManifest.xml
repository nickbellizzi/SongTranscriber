<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nickb.songtranscriber">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NewSongMenu"
            android:label="New Song"
            android:theme="@style/AppTheme"/>
        <activity android:name=".SetTimingsPage"
            android:label="Set Timings"
            android:theme="@style/AppTheme" />
        <activity android:name=".PlaySongMenu"
            android:label="Menu to Play Song"
            android:theme="@style/AppTheme" />
        <activity android:name=".PlaySongIPA"
            android:label="Play IPA Lyrics"
            android:theme="@style/AppTheme" />
    </application>

</manifest>